<component type="desktop">
    <id>org.pantheon.appcenter.desktop</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_group>elementary</project_group>
    <project_license>GPL-3.0+</project_license>
    <_name>AppCenter</_name>
    <_summary>Browse and manage apps</_summary>
    <description>
        <_p>
        An app store for indie and open source developers. Browse by categories or
        search and discover new apps. AppCenter is also used for updating your
        system to the latest and greatest version for new features and fixes.
        </_p>
    </description>
    <releases>
        <release version="0.1.3" date="2016-12-05" urgency="medium">
            <description>
                <ul>
                    <_li>Fix crash caused by entries with missing packages</_li>
                    <_li>Minor Bug Fixes</_li>
                    <_li>Translations Updates</_li>
                </ul>
            </description>
        </release>
        <release version="0.1.2" date="2016-10-29" urgency="medium">
            <description>
                <ul>
                    <_li>It is now possible to search apps inside a category</_li>
                    <_li>MPrevent multiple authentication dialogs when resuming from suspend</_li>
                    <_li>Minor Bug Fixes</_li>
                    <_li>Translations Updates</_li>
                </ul>
            </description>
        </release>
        <release version="0.1.1" date="2016-09-26" urgency="medium">
            <description>
                <ul>
                    <_li>Show category name on the headbar</_li>
                    <_li>Fix Steam instalation</_li>
                    <_li>Make search asynchronous</_li>
                    <_li>Minor Bug Fixes</_li>
                    <_li>Translations Updates</_li>
                </ul>
            </description>
        </release>
        <release version="0.1.0" date="2016-08-15"/>
    </releases>
    <provides>
        <binary>appcenter</binary>
        <binary>appcenter-daemon</binary>
        <dbus type="user">org.pantheon.AppCenter</dbus>
    </provides>
    <developer_name>elementary LLC.</developer_name>
    <url type="homepage">http://elementary.io/</url>
    <url type="bugtracker">https://bugs.launchpad.net/appcenter</url>
    <url type="donation">https://elementary.io/get-involved#funding</url>
    <url type="help">https://elementaryos.stackexchange.com/questions/tagged/appcenter</url>
    <update_contact>contact_at_elementary.io</update_contact>
</component>
